<div class="container">
  <h2>User Information</h2>                                                                                    
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
      	<th>Avatar</th>
        <th>UserName</th>
        <th>MailUser</th>
        <th>Age</th>
        <th>Basic Info</th>
        <th>Address</th>
        <th>Messages</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <td><%= image_tag @user.avatar.url(:medium) %></td>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
      	<td><%= @user.age %></td>
      	<td><%= @user.basic_info %></td>
      	<td><%= @user.address %></td>
        <td><%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation","data-sid" => current_user.id,"data-rip" => @user.id %></td>
      </tr>
    </tbody>
  </table>
  </div>
</div>